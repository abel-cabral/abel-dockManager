{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "plugins": ["@typescript-eslint"],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "prettier/prettier": ["error", { "singleQuote": true, "semi": true }]
    }
}